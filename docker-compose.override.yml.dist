version: '3'

networks:
  web:
    external:
      name: traefik

services:
  php:
    volumes:
      - ./:/var/www/html
    env_file:
      - .env
    labels:
      - "traefik.enable=false"

  apache:
    volumes:
      - ./public:/var/www/html/public
    ports:
      - 8090:${HTTPD_PORT}
    labels:
      - "traefik.backend=${COMPOSE_PROJECT_NAME}"
      - "traefik.frontend.rule=Host:${COMPOSE_PROJECT_NAME}.docker"
      - "traefik.port=${HTTPD_PORT}"
      - "traefik.frontend.passHostHeader=true"

  database:
    ports:
      - 27017:27017
    labels:
      - "traefik.enable=false"

  webpack:
    ports:
      - 8081:80
    labels:
      - "traefik.enable=false"

  adminer:
    container_name: ${COMPOSE_PROJECT_NAME}_adminer
    build:
      context: docker/adminer
    environment:
      - ADMINER_DESIGN=nette
    networks:
      - web
    ports:
      - 8080:8080
    labels:
      - "traefik.backend=${COMPOSE_PROJECT_NAME}.adminer"
      - "traefik.frontend.rule=Host:${COMPOSE_PROJECT_NAME}.adminer.docker"
      - "traefik.port=8080"
      - "traefik.frontend.passHostHeader=true"
